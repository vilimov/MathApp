<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MathApp.Maui.AboutPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="За приложението"
    Rotation="0">

    <Grid>
        <Image
            Aspect="AspectFill"
            IsOpaque="True"
            Source="backfont.jpg" />

        <StackLayout 
            Padding="10" 
            Spacing="20"
            VerticalOptions="FillAndExpand">
            <Image
                HeightRequest="60"
                SemanticProperties.Description=".Net Maui Logo"
                Source="dotnetMainPage_Clicked"
                VerticalOptions="Start" />
            <Label
                HorizontalOptions="Center"
                Text="За приложението"
                VerticalOptions="Center" />
            <Label
                HorizontalOptions="Center"
                Text="За автора"
                VerticalOptions="Center" />
            <Button
                x:Name="MainPage"
                VerticalOptions="EndAndExpand"
                Clicked="MainPage_Clicked"
                SemanticProperties.Hint="ReturnToMainPage"
                Style="{StaticResource GoToMainPageButton}"
                Text="Към началната страница" />
        </StackLayout>
    </Grid>
</ContentPage>
